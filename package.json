{
  "name": "yt-downloader",
  "version": "1.0.0",
  "description": "YouTube Downloader App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.ytdownloader",
    "productName": "YouTube Downloader",
    "files": [
      "**/*",
      "resources/bin/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin/",
        "to": "resources/bin/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.10.0"
  }
}
